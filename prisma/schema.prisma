generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id           Int    @id @default(autoincrement())
  title        String
  location     String
  description  String
  organization String

  creator   User   @relation(fields: [creator_name], references: [username])
  creator_name String
}

model User {
  username String @id
  password String
  posts Post[]
}
