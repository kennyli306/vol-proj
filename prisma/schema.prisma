generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Post {
    id           Int    @id @default(autoincrement())
    title        String
    organization String
    description  String

    address       String  @default("Unknown")
    latitude      Float?
    longitude     Float?
    street_number String?
    street_name   String?
    neighborhood  String?
    city          String?
    county        String?
    state         String?
    country       String?
    postal_code   String?
}

model User {
    username String @id
    password String
}
